<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <!-- INERTIAL SETTINGS -->
    <xacro:include filename="inertial_macros.xacro"/>

    <!-- CAMERA PARAMETERS -->
    <xacro:include filename="depth_camera.xacro"/>

    <!-- COLORS -->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link"/>

    <!-- DEFINE PARAMETERS -->
    <xacro:property name="chassis_radius" value="0.02"/>
    <xacro:property name="chassis_length" value="0.1"/>
    <xacro:property name="wheel_radius" value="0.025"/>
    <xacro:property name="wheel_length" value="0.01"/>
    <xacro:property name="chassis_mass" value="0.5"/>
    <xacro:property name="wheel_mass" value="0.1"/>
    <xacro:property name="caster_wheel_mass" value="0.5"/>

    <!-- Update All Parameters from a Single Parameter -->
    <xacro:property name="scale" value="10.0"/>
    <xacro:property name="scaled_chassis_radius" value="${chassis_radius * scale}"/>
    <xacro:property name="scaled_chassis_length" value="${chassis_length * scale}"/>
    <xacro:property name="scaled_wheel_radius" value="${wheel_radius * scale}"/>
    <xacro:property name="scaled_wheel_length" value="${wheel_length * scale}"/>
    <xacro:property name="scaled_camera_length" value="${scaled_chassis_radius / 5}"/>

    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="${scaled_chassis_length / 2} 0 ${scaled_wheel_radius}" rpy="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder radius="${scaled_chassis_radius}" length="${scaled_chassis_length}"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder radius="${scaled_chassis_radius}" length="${scaled_chassis_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${chassis_mass}" radius="${scaled_chassis_radius}" length="${scaled_chassis_length}">
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="${scaled_wheel_radius} ${scaled_chassis_radius} ${scaled_wheel_radius}" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${wheel_mass}" radius="${scaled_wheel_radius}" length="${scaled_wheel_length}">
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="${scaled_wheel_radius} -${scaled_chassis_radius} ${scaled_wheel_radius}" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${wheel_mass}" radius="${scaled_wheel_radius}" length="${scaled_wheel_length}">
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- CASTER WHEEL LINK -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="${scaled_chassis_length / 4} 0 -${scaled_wheel_radius / 2}" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="${scaled_wheel_radius / 1.5}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${scaled_wheel_radius / 1.5}"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="${caster_wheel_mass}" radius="${scaled_wheel_radius / 1.5}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- CAMERA -->
    <joint name="camera_joint" type="fixed">
        <parent link="chassis"/>
        <child link="camera_link"/>
        <origin xyz="${scaled_chassis_length / 2} 0 0" rpy="0 0 0"/>
    </joint>
    
    <link name="camera_link">
        <visual>
            <origin xyz="${scaled_camera_length / 2} 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="${scaled_camera_length} ${scaled_camera_length} ${scaled_camera_length}"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="${scaled_camera_length / 2} 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="${scaled_camera_length} ${scaled_camera_length} ${scaled_camera_length}"/>
            </geometry>
        </collision>
    </link>

    <joint name="camera_optical_joint" type="fixed">
        <parent link="camera_link"/>
        <child link="camera_link_optical"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_link_optical"/>

</robot>