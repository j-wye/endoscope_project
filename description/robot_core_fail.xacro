<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <!-- INERTIAL SETTINGS -->
    <xacro:include filename="inertial_macros.xacro"/>

    <!-- CAMERA PARAMETERS -->
    <!-- <xacro:include filename="depth_camera.xacro"/> -->
    <xacro:include filename="rgb_camera.xacro"/>

    <!-- <xacro:include filename="gazebo_control.xacro"/> -->

    <!-- COLORS -->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link"/>

    <!-- DEFINE PARAMETERS -->
    <xacro:property name="chassis_radius" value="0.0065"/>
    <xacro:property name="chassis_length" value="0.02"/>
    <xacro:property name="wheel_radius" value="0.008"/>
    <xacro:property name="wheel_length" value="0.001"/>
    <xacro:property name="chassis_mass" value="0.002"/>
    <xacro:property name="wheel_mass" value="0.001"/>
    <xacro:property name="caster_wheel_mass" value="0.001"/>

    <!-- Update All Parameters from a Single Parameter -->
    <xacro:property name="scale" value="50.0"/>
    <xacro:property name="scaled_chassis_radius" value="${chassis_radius * scale}"/>
    <xacro:property name="scaled_chassis_length" value="${chassis_length * scale}"/>
    <xacro:property name="scaled_wheel_radius" value="${scaled_chassis_radius * 1.1}"/>
    <xacro:property name="scaled_wheel_length" value="${wheel_length * scale}"/>
    <xacro:property name="scaled_chassis_mass" value="${chassis_mass * scale}"/>
    <xacro:property name="scaled_wheel_mass" value="${wheel_mass * scale}"/>
    <xacro:property name="scaled_caster_wheel_mass" value="${caster_wheel_mass * scale}"/>
    <xacro:property name="scaled_camera_length" value="${scaled_chassis_radius / 5}"/>

    <!-- BACK CHASSIS LINK -->
    <joint name="back_chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_chassis"/>
        <origin xyz="${scaled_chassis_length / 2} 0 ${scaled_wheel_radius}" rpy="0 0 0"/>
    </joint>

    <link name="back_chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder radius="${scaled_chassis_radius}" length="${scaled_chassis_length}"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder radius="${scaled_chassis_radius}" length="${scaled_chassis_length * 0.8}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${scaled_chassis_mass}" radius="${scaled_chassis_radius}" length="${scaled_chassis_length}">
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT BACK WHEEL LINK -->
    <joint name="lb_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="lb_wheel"/>
        <origin xyz="${scaled_wheel_radius} ${scaled_chassis_radius} ${scaled_wheel_radius}" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="lb_wheel">
        <visual>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${scaled_wheel_mass}" radius="${scaled_wheel_radius}" length="${scaled_wheel_length}">
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="lb_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT BACK WHEEL LINK -->
    <joint name="rb_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rb_wheel"/>
        <origin xyz="${scaled_wheel_radius} -${scaled_chassis_radius} ${scaled_wheel_radius}" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rb_wheel">
        <visual>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${scaled_wheel_mass}" radius="${scaled_wheel_radius}" length="${scaled_wheel_length}">
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rb_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- BACK CASTER WHEEL LINK -->
    <joint name="b_caster_wheel_joint" type="fixed">
        <parent link="back_chassis"/>
        <child link="b_caster_wheel"/>
        <origin xyz="${scaled_chassis_length / 4} 0 -${scaled_wheel_radius / 2}" rpy="0 0 0"/>
    </joint>

    <link name="b_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="${scaled_wheel_radius / 2}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${scaled_wheel_radius / 2}"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="${scaled_caster_wheel_mass}" radius="${scaled_wheel_radius / 2}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="b_caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- FRONT CHASSIS LINK -->
    <joint name="roll_joint" type="revolute">
        <parent link="back_chassis"/>
        <child link="roll_link"/>
        <origin xyz="${scaled_chassis_length / 2} 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit velocity="10.0" effort="200" lower="-${pi}" upper="${pi}"/>
    </joint>

    <!-- Roll Joint -->
    <link name="roll_link"/>

    <!-- Pitch Joint -->
    <joint name="pitch_joint" type="revolute">
        <parent link="roll_link"/>
        <child link="pitch_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit velocity="10.0" effort="200" lower="-${pi}" upper="${pi}"/>
    </joint>

    <link name="pitch_link"/>

    <!-- Yaw Joint -->
    <joint name="yaw_joint" type="revolute">
        <parent link="pitch_link"/>
        <child link="front_chassis"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit velocity="10.0" effort="200" lower="-${pi}" upper="${pi}"/>
    </joint>

    <link name="front_chassis">
        <visual>
            <origin xyz="${scaled_chassis_length / 2} 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder radius="${scaled_chassis_radius}" length="${scaled_chassis_length}"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="${scaled_chassis_length / 2} 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder radius="${scaled_chassis_radius}" length="${scaled_chassis_length * 0.8}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${scaled_chassis_mass}" radius="${scaled_chassis_radius}" length="${scaled_chassis_length}">
            <origin xyz="${scaled_chassis_length / 2} 0 0" rpy="0 ${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT FRONT WHEEL LINK -->
    <joint name="lf_wheel_joint" type="continuous">
        <parent link="front_chassis"/>
        <child link="lf_wheel"/>
        <origin xyz="${scaled_wheel_radius} ${scaled_chassis_radius} 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="lf_wheel">
        <visual>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${scaled_wheel_mass}" radius="${scaled_wheel_radius}" length="${scaled_wheel_length}">
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="lf_wheel">
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- RIGHT FRONT WHEEL LINK -->
    <joint name="rf_wheel_joint" type="continuous">
        <parent link="front_chassis"/>
        <child link="rf_wheel"/>
        <origin xyz="${scaled_wheel_radius} -${scaled_chassis_radius} 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rf_wheel">
        <visual>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${scaled_wheel_radius}" length="${scaled_wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="${scaled_wheel_mass}" radius="${scaled_wheel_radius}" length="${scaled_wheel_length}">
            <origin xyz="0 0 ${scaled_wheel_length / 2}" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rf_wheel">
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- FRONT CASTER WHEEL LINK -->
    <joint name="f_caster_wheel_joint" type="fixed">
        <parent link="front_chassis"/>
        <child link="f_caster_wheel"/>
        <origin xyz="${scaled_chassis_length / 4} 0 -${scaled_wheel_radius / 2}" rpy="0 0 0"/>
    </joint>

    <link name="f_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="${scaled_wheel_radius / 2}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${scaled_wheel_radius / 2}"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="${scaled_caster_wheel_mass}" radius="${scaled_wheel_radius / 2}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="f_caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- CAMERA -->
    <joint name="camera_joint" type="fixed">
        <parent link="front_chassis"/>
        <child link="camera_link"/>
        <origin xyz="${scaled_chassis_length / 2} 0 0" rpy="0 0 0"/>
    </joint>
    
    <link name="camera_link">
        <visual>
            <origin xyz="${scaled_camera_length / 2} 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="${scaled_camera_length} ${scaled_camera_length} ${scaled_camera_length}"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="${scaled_camera_length / 2} 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="${scaled_camera_length} ${scaled_camera_length} ${scaled_camera_length}"/>
            </geometry>
        </collision>
    </link>

    <joint name="camera_optical_joint" type="fixed">
        <parent link="camera_link"/>
        <child link="camera_optical_link"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_optical_link"/>

</robot>
